# Video-to-Guide Pipeline Configuration

# =============================================================================
# API PROVIDERS (for enhanced transcription and guide generation)
# =============================================================================

# OpenRouter API (recommended for cost-effective API access)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenAI API (direct access)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Hugging Face API (for Whisper transcription)
# Get your access token from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_access_token_here

# =============================================================================
# PROCESSING MODE CONFIGURATION
# =============================================================================

# Processing mode: basic, local_ai, api_transcription, api_generation, full_api, hybrid
PROCESSING_MODE=basic

# =============================================================================
# LOCAL AI CONFIGURATION (Ollama)
# =============================================================================

# Ollama server configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:7b-chat
OLLAMA_TIMEOUT=300

# =============================================================================
# WHISPER CONFIGURATION
# =============================================================================

WHISPER_MODEL=base
WHISPER_DEVICE=cpu  # or 'cuda' for GPU acceleration

# FFmpeg Configuration
FFMPEG_PATH=/usr/bin/ffmpeg  # Path to FFmpeg binary

# Processing Configuration
MAX_CONCURRENT_JOBS=2
TEMP_DIR=./tmp

# Output Configuration
OUTPUT_DIR=./output
KEEP_INTERMEDIATE_FILES=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/pipeline.log

# Template Configuration
DEFAULT_TEMPLATE=deployment_guide
TEMPLATE_DIR=./templates

# Quality Assurance
MIN_TRANSCRIPTION_CONFIDENCE=0.8
ENABLE_SPELL_CHECK=true

# Docker Configuration (if using containers)
DOCKER_MEMORY_LIMIT=4g
DOCKER_CPU_LIMIT=2
